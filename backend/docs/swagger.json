{
    "swagger": "2.0",
    "info": {
        "description": "API d'authentification pour ThinkShare : Google + formulaire",
        "title": "ThinkShare Auth API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/auth/{provider}": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Lancer l'authentification OAuth",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Nom du provider (ex: google)",
                        "name": "provider",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirect vers le provider",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/auth/{provider}/callback": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Callback OAuth",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Nom du provider",
                        "name": "provider",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "302": {
                        "description": "Redirect vers / en cas d'erreur",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "DÃ©connexion utilisateur",
                "responses": {
                    "302": {
                        "description": "Redirect vers /",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}